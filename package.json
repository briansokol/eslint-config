{
  "name": "@bsokol/eslint-config",
  "version": "5.0.0",
  "description": "Configures your React/Native/Node + TypeScript project for ESlint and Prettier",
  "main": "base.js",
  "keywords": [
    "eslint",
    "eslint-config",
    "prettier",
    "react",
    "react-native",
    "node",
    "typescript"
  ],
  "author": "Brian Sokol <bri@nsokol.net>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/briansokol/eslint-config.git"
  },
  "scripts": {
    "lint": "eslint './**/*.{js,ts}'",
    "lint:react": "eslint './**/*.js' -c react-typescript.js",
    "lint:react-native": "eslint './**/*.js' -c react-native-typescript.js",
    "lint:node": "eslint './**/*.js' -c node-typescript.js",
    "lint:all": "yarn run lint:react && yarn run lint:react-native && yarn run lint:node",
    "prettier": "prettier --write './**/*.{js,json,md,yml}'",
    "build-ts": "tsc",
    "build-rules": "ts-node ./scripts/gen-rules"
  },
  "peerDependencies": {
    "eslint": "^6",
    "prettier": "^1.18",
    "typescript": "^3"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^3.0.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "eslint-plugin-react-native": "^3.7.0"
  },
  "devDependencies": {
    "@types/eslint": "6.1.3",
    "@types/node": "12.12.14",
    "eslint": "6.7.2",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "react": "16.12.0",
    "ts-node": "8.5.4",
    "typescript": "3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run build-rules && yarn run build-ts && git add . && lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --debug --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,yml,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
