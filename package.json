{
  "name": "@bsokol/eslint-config",
  "version": "2.0.0",
  "description": "Configures your React/Native/Node + TypeScript project for ESlint and Prettier",
  "main": "base.js",
  "keywords": [
    "eslint",
    "eslint-config",
    "prettier",
    "react",
    "react-native",
    "node",
    "typescript"
  ],
  "author": "Brian Sokol <bri@nsokol.net>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/briansokol/eslint-config.git"
  },
  "scripts": {
    "lint": "eslint './**/*.js'",
    "lint:react": "eslint './**/*.js' -c react-typescript.js",
    "lint:react-native": "eslint './**/*.js' -c react-native-typescript.js",
    "lint:node": "eslint './**/*.js' -c node-typescript.js",
    "lint:all": "yarn run lint:react && yarn run lint:react-native && yarn run lint:node",
    "prettier": "prettier --write './**/*.{js,json,md,yml}'"
  },
  "peerDependencies": {
    "eslint": "^5",
    "prettier": "^1.18",
    "typescript": "^2.8||^3"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.14.2",
    "eslint-plugin-react-native": "3.7.0"
  },
  "devDependencies": {
    "eslint": "^5",
    "husky": "3.0.0",
    "lint-staged": "9.0.1",
    "prettier": "^1.18",
    "react": "16.8.6",
    "typescript": "^3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,yml,md}": [
      "eslint --fix --ignore-pattern '*.json' --ignore-pattern '*.yml' --ignore-pattern '*.md'",
      "prettier --write",
      "git add"
    ]
  }
}
